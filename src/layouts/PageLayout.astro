---
import Layout from '../layouts/BaseLayout.astro';
import Header from '../components/widgets/NavMenu.astro';
import Footer from '../components/widgets/Footer.astro';
import Mice from '../components/common/CustomMouse.astro';
import { headerData, footerData } from '../data';
import type { MetaSEO } from '../types';
const isHomePage = Astro.url.pathname === '/';

export interface Props {
  meta?: MetaSEO;
}

const { meta } = Astro.props;
---

<Layout {meta}>
  <slot name="header">
    <Header {...headerData} isHomePage={isHomePage} />
  </slot>

  <main>
    <Mice />
    <slot />
  </main>
  <slot name="footer">
    <Footer {...footerData} />
  </slot>
</Layout>
