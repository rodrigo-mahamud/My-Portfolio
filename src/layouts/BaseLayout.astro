---
import '~/assets/styles/base.css';

import MetaTags from '~/components/common/MetaTags.astro';
import BasicScripts from '~/components/common/BasicScripts.astro';
import type { MetaSEO } from '~/types';
import { SITE } from '~/config.mjs';

import GsapScrollBarScripts from '~/components/common/GsapScrollBarScripts.astro';

export interface Props {
  meta?: MetaSEO;
}

const { meta = {} } = Astro.props;
const { language = 'es', textDirection = 'ltr' } = SITE;
---

<!DOCTYPE html>
<html lang={language} dir={textDirection} class="2xl:text-[20px] dark">
  <head>
    <MetaTags {...meta} />
  </head>
  <body class="antialiased text-page bg-light dark:text-slate-300 dark:bg-[#0a0118] cursor-none">
    <slot />

    <!-- <BasicScripts /> -->
    <GsapScrollBarScripts />
    <style is:global>
      img {
        content-visibility: auto;
      }
    </style>
  </body>
</html>
