---
import '~/assets/styles/base.css';

import MetaTags from '~/components/common/MetaTags.astro';
import BasicScripts from '~/components/common/BasicScripts.astro';
import { MetaSEO } from '~/types';
import { SITE } from '~/config.mjs';
import Mice from '~/components/common/Mice.astro';
import GsapScripts from '~/components/common/GsapScripts.astro';
import LoadingScreen from '~/components/common/LoadingScreen.astro';

export interface Props {
  meta?: MetaSEO;
}

const { meta = {} } = Astro.props;
const { language = 'es', textDirection = 'ltr' } = SITE;
---

<!DOCTYPE html>
<html lang={language} dir={textDirection} class="2xl:text-[20px] dark">
  <head>
    <MetaTags {...meta} />
  </head>
  <body class="antialiased text-page bg-light dark:text-slate-300 tracking-tight dark:bg-[#0a0118] cursor-none">
    <LoadingScreen />
    <Mice />
    <slot />
    <BasicScripts />
    <GsapScripts />
    <style is:global>
      img {
        content-visibility: auto;
      }
    </style>
  </body>
</html>
