---
// Importaciones necesarias
import type { ImageMetadata } from 'astro';
import { Image } from 'astro:assets';
import { getAltTxt } from '~/utils/images';

// Definici√≥n de la interfaz para las propiedades
interface CardProps {
  cardMedia: string;
}

const { cardMedia } = Astro.props as CardProps;
const altTxt = getAltTxt(cardMedia);
const images = import.meta.glob<{ default: ImageMetadata }>('/src/assets/images/works/*.{jpeg,jpg,png,gif}');
const getImage = await images[cardMedia]();
const myImage = getImage.default;
---

<section class="bg-black w-full h-screen">
  <Image
    class="z-20 absolute"
    alt={altTxt}
    widths={[240, 540, 720]}
    sizes={`(min-width: 360px) 240px, (min-width: 720px) 540px, (min-width: 1600px) 720px`}
    quality={'mid'}
    format="avif"
    loading="lazy"
    src={myImage}
    decoding="async"
  />
</section>
