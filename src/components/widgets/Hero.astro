<script>
  import { gsap } from 'gsap';

  document.addEventListener('DOMContentLoaded', () => {
    // obtener todas las columnas de las imágenes
    const columns = Array.from(document.querySelectorAll('.'));

    columns.forEach((column) => {
      // generar una duración aleatoria entre 10 y 30
      const randomDurationInitial = Math.random() * (6 - 4) + 4;
      const randomDurationIdle = Math.random() * (20 - 10) + 10;

      const tl = gsap.timeline();

      // Primera animación al cargar
      tl.fromTo(
        column,
        {
          y: -500,
        },
        {
          y: 0,
          duration: randomDurationInitial,
          delay: 0.25,
          ease: 'Expo.easeOut',
        }
      );

      // Animación repetitiva después de la inicial
      tl.to(column, {
        opacity: 1,
        y: 200,
        repeat: -1,
        yoyo: true,
        delay: 0,
        duration: randomDurationIdle,
        ease: 'Expo.easeOut',
      });
    });
  });
</script>
