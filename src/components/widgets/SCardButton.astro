<div
  id="scard"
  class="border border-neutral-400 rounded-xl bg-[#00000050] backdrop-blur-xl fixed z-40 flex mb-4 bottom-full left-0 right-0 translate-y-20 opacity-0"
>
  <div class="flex w-full items-center justify-start flex-row" id="now-playing">
    <a id="track-link" class="flex m-0 w-1/4 flex-col" href="#" target="_blank">
      <img id="album-cover" class="m-0 h-32 rounded-l-xl object-cover" src="" alt="Carátula del álbum" />
      <img id="default-image" src="no-song.png" style="display: none;" />
    </a>
    <div class="flex-col mx-6 w-3/4">
      <h3 id="default-text" style="display: none;">Texto por defecto</h3>
      <h3 id="track-name" class="truncate max-w-xs text-white text-lg font-semibold"></h3>
      <h4 id="artist-name" class="text-neutral-300 text-sm"></h4>
      <div id="custom-audio" class="flex flex-row items-center justify-start mt-3">
        <button id="play-pause-button" class="w-9 h-9 bg-[#ffffff25] rounded-full flex items-center justify-center">
          <svg viewBox="0 0 24 24" id="play-icon" width="24" height="24" stroke="#fff" fill="#fff"
            ><path
              d="M18 12c0 0.4-0.4 0.6-0.4 0.6l-10.2 6.4c-0.7 0.5-1.4 0.1-1.4-0.8v-12.4c0-0.9 0.6-1.3 1.4-0.8l10.2 6.4c0 0 0.4 0.3 0.4 0.6z"
            ></path></svg
          >
          <svg
            id="pause-icon"
            style="display: none;"
            viewBox="0 0 24 24"
            width="24"
            height="24"
            stroke="#fff"
            fill="#fff"
            ><path
              d="M9 4.5h-1.5a1.5 1.5 0 0 0-1.5 1.5v12a1.5 1.5 0 0 0 1.5 1.5h1.5a1.5 1.5 0 0 0 1.5-1.5V6a1.5 1.5 0 0 0-1.5-1.5z m7.5 0h-1.5a1.5 1.5 0 0 0-1.5 1.5v12a1.5 1.5 0 0 0 1.5 1.5h1.5a1.5 1.5 0 0 0 1.5-1.5V6a1.5 1.5 0 0 0-1.5-1.5z"
            ></path></svg
          >
        </button>

        <div id="progress-bar">
          <div id="progress"></div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="w-1/6 z-50">
  <button
    id="sbutton"
    class="rounded-full w-16 h-16 ml-auto bg-[#00000050] backdrop-blur-xl border border-white flex justify-center items-center cursor-none"
    ><svg viewBox="0 0 120 120" width="30" height="30" stroke="#fff" fill="#fff"
      ><path d="M67.5 97.5c0 8.3-8.4 15-18.8 15S30 105.8 30 97.5s8.4-15 18.8-15 18.8 6.7 18.7 15z" fill-rule="evenodd"
      ></path><path d="M67.5 22.5v75H60V22.5h7.5z"></path><path
        d="M60 21.2a7.5 7.5 0 0 1 6-7.4l22.5-4.5A7.5 7.5 0 0 1 97.5 16.7V30L60 37.5V21.2z"></path></svg
    ></button
  >
</div>
