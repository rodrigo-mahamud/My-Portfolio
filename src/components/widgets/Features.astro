---
export interface Props {
  title?: string;
  subtitle?: string;
  highlight?: string;
}
---

<section class="relative">
  <div class="relative max-w-5xl mx-auto">
    <h1>{Astro.props.title}</h1>
    <h2>{Astro.props.subtitle}</h2>
    <h3>{Astro.props.highlight}</h3>

    <div class="py-4 pt-8 sm:py-6 lg:py-8 lg:pt-40">
      <div id="cards" class="grid gap-6 sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-3 my-12 text-white items-stretch">
        <slot />
      </div>
    </div>
  </div>
</section>
