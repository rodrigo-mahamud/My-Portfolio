<div id="scard" class="overflow-hidden blur-md fixed h-full z-40 left-0 right-0 bottom-0 opacity-0 hidden">
  <svg
    id="scardClose"
    class="absolute magnetic mx-3 my-2 right-0 opacity-0 scale-0"
    data-strength="1.05"
    width="1.75rem"
    height="1.75rem"
    viewBox="0 0 24 24"
    stroke-width="1.5"
    stroke="#fff"
    fill="#fff"
    stroke-linecap="round"
    stroke-linejoin="round"
  >
    <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
    <path d="M18 6l-12 12"></path>
    <path d="M6 6l12 12"></path>
  </svg>
  <div class="flex w-full items-center justify-start flex-row" id="now-playing">
    <a id="track-link" class="flex m-0 w-[30%] flex-col h-full" href="#" target="_blank">
      <img id="album-cover" class="m-0 h-40 rounded-l-xl object-fill" src="" alt="Car치tula del 치lbum" />
      <img
        id="default-image"
        class="custom-mouse rounded-l-xl object-cover h-full"
        data-typemouse="link"
        src="no-song.png"
        alt="Car치tula del 치lbum por defecto"
        style="display: none;"
      />
    </a>
    <div class="flex-col mx-5 w-[70%]">
      <h2 id="scard-title" class="truncate max-w-xs text-white text-lg font-semibold">Sonando en mi Spotify游뱆</h2>
      <h3 id="track-name" class="truncate max-w-xs text-neutral-300 text-base font-semibold mb-4"></h3>

      <div id="custom-audio" class="flex flex-row items-center justify-start mt-3">
        <button
          id="play-pause-button"
          class="magnetic w-9 h-9 bg-[#ffffff25] rounded-full flex items-center justify-center"
          data-strength="0.75"
        >
          <svg viewBox="0 0 24 24" id="play-icon" width="24" height="24" stroke="#fff" fill="#fff"
            ><path
              d="M18 12c0 0.4-0.4 0.6-0.4 0.6l-10.2 6.4c-0.7 0.5-1.4 0.1-1.4-0.8v-12.4c0-0.9 0.6-1.3 1.4-0.8l10.2 6.4c0 0 0.4 0.3 0.4 0.6z"
            ></path></svg
          >
          <svg
            id="pause-icon"
            style="display: none;"
            viewBox="0 0 24 24"
            width="24"
            height="24"
            stroke="#fff"
            fill="#fff"
            ><path
              d="M9 4.5h-1.5a1.5 1.5 0 0 0-1.5 1.5v12a1.5 1.5 0 0 0 1.5 1.5h1.5a1.5 1.5 0 0 0 1.5-1.5V6a1.5 1.5 0 0 0-1.5-1.5z m7.5 0h-1.5a1.5 1.5 0 0 0-1.5 1.5v12a1.5 1.5 0 0 0 1.5 1.5h1.5a1.5 1.5 0 0 0 1.5-1.5V6a1.5 1.5 0 0 0-1.5-1.5z"
            ></path></svg
          >
        </button>

        <div id="progress-bar">
          <div id="progress"></div>
        </div>
      </div>
    </div>
  </div>
</div>
