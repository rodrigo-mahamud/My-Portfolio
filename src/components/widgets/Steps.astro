<style>
  .borderAlt {
    border: solid #2d263a;
    border-width: 2px 2px 0 2px;
    border-radius: 1rem 1rem 0 0px;
    padding: 0.75rem 2rem 0.75rem 2rem;
    box-shadow: -2px 20px 0px #0a0118;
    position: relative;
  }
  .borderAlt:before {
    border: solid #2d263a;
    border-width: 2px 1px 0 0px;
    content: '';
    height: 32px;
    left: -25px;
    position: absolute;
    width: 18px;
    border-top-right-radius: 40px;
    transform: translateY(67%) rotate(90deg);
    box-shadow: 1px -11px 0px #0a0118;
  }
  .borderGlow {
    display: flex;
    align-items: flex-start;
    flex-direction: column;
    border: solid #2d263a;
    background: radial-gradient(
      40.23% 100% at 20% 0%,
      rgb(25 17 41) 0%,
      rgba(10, 1, 24, 1) 100%,
      rgba(10, 1, 24, 1) 100%
    );
    border-width: 2px 2px 0 2px;
    border-radius: 1rem 0 0 0;
  }
  .borderGlow:before {
    content: '';
    background: linear-gradient(90deg, rgba(0, 0, 0, 0) 0%, rgba(255, 255, 255, 0.75) 20%, rgba(0, 0, 0, 0) 80%);
    width: 100%;
    position: relative;
    display: flex;
    height: 0.75px;
  }
  .borderGlow::after {
    content: '';
    background: linear-gradient(180deg, rgba(0, 0, 0, 0) 0%, rgb(10 1 24) 100%);
    width: 102%;
    left: -1%;
    position: relative;
    display: flex;
    height: 8rem;
  }
  .animate-on-scroll:nth-of-type(2) .borderGlow {
    background: radial-gradient(
      40.23% 100% at 20% 0%,
      rgb(25 17 41) 0%,
      rgba(10, 1, 24, 1) 100%,
      rgba(10, 1, 24, 1) 100%
    );
    border-width: 2px 2px 0 2px;
    border-radius: 1rem 1rem 0 0;
  }
  .animate-on-scroll:nth-of-type(2) .borderGlow:before {
    content: '';
    background: linear-gradient(90deg, rgba(0, 0, 0, 0) 0%, rgba(255, 255, 255, 0.75) 20%, rgba(0, 0, 0, 0) 65%);
    width: 100%;
    position: relative;
    display: flex;
    height: 0.75px;
  }
  .animate-on-scroll:nth-of-type(2) .borderAlt::after {
    border: solid #2d263a;
    border-width: 2px 2px 0 0px;
    content: '';
    height: 32px;
    right: -19px;
    position: absolute;
    width: 18px;
    border-top-right-radius: 40px;
    transform: translateY(45%) rotate(180deg);
    box-shadow: 1px -11px 0px #0a0118;
  }
  .animate-on-scroll:nth-of-type(2) div {
    box-shadow: 175px 0px 30px -15px rgb(10 1 24 / 75%);
  }
  .animate-on-scroll:nth-of-type(3) .borderGlow {
    background: radial-gradient(
      40.23% 100% at 20% 0%,
      rgb(25 17 41) 0%,
      rgba(10, 1, 24, 1) 100%,
      rgba(10, 1, 24, 1) 100%
    );
    border-width: 2px 2px 0 2px;
    border-radius: 1rem 1rem 0 0;
  }
  .animate-on-scroll:nth-of-type(3) .borderGlow:before {
    content: '';
    background: linear-gradient(90deg, rgba(0, 0, 0, 0) 0%, rgba(255, 255, 255, 0.75) 20%, rgba(0, 0, 0, 0) 50%);
    width: 100%;
    position: relative;
    display: flex;
    height: 0.75px;
  }
  .animate-on-scroll:nth-of-type(3) .borderAlt::after {
    border: solid #2d263a;
    border-width: 2px 2px 0 0px;
    content: '';
    height: 32px;
    right: -19px;
    position: absolute;
    width: 18px;
    border-top-right-radius: 40px;
    transform: translateY(47%) rotate(180deg);
    box-shadow: 6px -11px 0px 5px #0a0118;
  }
  .animate-on-scroll:nth-of-type(3) div {
    box-shadow: 175px 0px 30px -15px rgb(10 1 24 / 75%);
  }
</style>
