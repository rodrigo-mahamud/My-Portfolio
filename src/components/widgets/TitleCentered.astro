---
export interface Props {
  data?: {
    title?: string;
    subtitle?: string;
    isSticky?: boolean;
  };
}
const { data = {} } = Astro.props;
---

<div class={`flex flex-col ${data.isSticky ? 'sticky' : ''} top-20 pb-16`}>
  {
    data.subtitle && (
      <div class="badge">
        <span class="badge-text">{data.subtitle}</span>
      </div>
    )
  }
  {data.title && <h2 class="headingTxt text-" set:html={data.title} />}
</div>
