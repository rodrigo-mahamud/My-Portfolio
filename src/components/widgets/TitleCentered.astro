---
export interface Props {
  data?: {
    title?: string;
    subtitle?: string;
    pretitle?: string;
    isSticky?: boolean;
  };
}
const { data = {} } = Astro.props;
---

<div class={`flex flex-col ${data.isSticky ? 'sticky' : ''} top-8 pb-10 text-pretty`}>
  {
    data.pretitle && (
      <div class="badge animate-on-scroll" data-type="simple" data-duration="1.5" data-easing="Expo.easeOut">
        <span class="badge-text text-sm md:text-base">{data.pretitle}</span>
      </div>
    )
  }
  {
    data.title && (
      <h2
        class="headingTxt text-center text-3xl md:text-4xl lg:text-5xl lg:leading-[3.5rem] animate-on-scroll"
        data-type="simple"
        data-duration="1.5"
        data-easing="Expo.easeOut"
        set:html={data.title}
      />
    )
  }
  {
    data.subtitle && (
      <h2
        class="max-w-[625px] text-gray-400 mx-auto text-center mt-3 animate-on-scroll"
        data-type="simple"
        data-delay="0.15"
        data-duration="1.5"
        data-easing="Expo.easeOut"
        set:html={data.subtitle}
      />
    )
  }
</div>
