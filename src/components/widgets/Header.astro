---
interface Link {
  text?: string;
  href?: string;
  ariaLabel?: string;
  icon?: string;
}

interface ActionLink extends Link {
  type?: string;
}

interface MenuLink extends Link {
  links?: Array<Link>;
}

export interface Props {
  links?: Array<MenuLink>;
  actions?: Array<ActionLink>;
  isSticky?: boolean;
  showToggleTheme?: boolean;
  showRssFeed?: boolean;
  position?: string;
}

const { links = [] } = Astro.props;
---

<header class="fixed z-50 w-full max-w-lg -translate-x-1/2 bottom-4 left-1/2" id="header">
  <div class="flex justify-end flex-row h-16 mx-auto">
    <nav
      class="border border-neutral-400 rounded-full bg-[#00000050] backdrop-blur-xl items-center justify-center w-5/6 hidden md:flex md:h-auto"
      aria-label="Main navigation"
    >
      <div id="navGlow" class="w-1/4 left-0 h-full -z-20 absolute navGlow"></div>
      {
        links.map(({ text, href }) => (
          <a
            class="font-medium hover:text-gray-900 cursor-none dark:hover:text-white px-4 flex items-center transition duration-150 ease-in-out"
            href={href}
          >
            {text}
          </a>
        ))
      }
    </nav>
    <div
      class="border border-neutral-400 rounded-xl bg-[#00000050] backdrop-blur-xl fixed z-50 flex mb-4 bottom-full left-0 right-0"
    >
      <div class="flex w-full items-center justify-start flex-row" id="now-playing">
        <a id="track-link" class="flex" href="#" target="_blank">
          <img id="album-cover" class="m-0 h-32 rounded-l-xl" src="" alt="Carátula del álbum" />
        </a>
        <div class="flex-col ml-6">
          <p id="track-name" class="truncate max-w-sm text-neutral-50"></p>
          <p id="artist-name" class="text-neutral-400"></p>
        </div>
      </div>
    </div>
    <div class="w-1/6">
      <button
        class="rounded-full w-16 h-16 ml-auto bg-[#00000050] backdrop-blur-xl border border-white flex justify-center items-center cursor-none"
        ><svg viewBox="0 0 120 120" width="30" height="30" stroke="#fff" fill="#fff"
          ><path
            d="M67.5 97.5c0 8.3-8.4 15-18.8 15S30 105.8 30 97.5s8.4-15 18.8-15 18.8 6.7 18.7 15z"
            fill-rule="evenodd"></path><path d="M67.5 22.5v75H60V22.5h7.5z"></path><path
            d="M60 21.2a7.5 7.5 0 0 1 6-7.4l22.5-4.5A7.5 7.5 0 0 1 97.5 16.7V30L60 37.5V21.2z"></path></svg
        ></button
      >
    </div>
  </div>
</header>
