---
import { SITE } from '~/config.mjs';
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Features from '~/components/widgets/Features.astro';
import Steps from '~/components/widgets/Steps.astro';
import LatestPosts from '~/components/blog/LatestPosts.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import FeatureHead from '~/components/widgets/FeatureHead.astro';
import FeatureIcons from '~/components/widgets/FeatureIcons.astro';

const meta = {
  title: SITE.title,
  description: SITE.description,
  dontUseTitleTemplate: true,
};
---

<Layout {meta}>
  <!-- Hero Widget ******************* -->
  <Hero />

  <!-- Features2 Widget ************** -->

  <Features title="Most used widgets" subtitle="Subtitle Here" highlight="Components">
    <FeatureHead
      title="Headers"
      description="You can filter and sort data in Wope instantly, without having to export it to a spreadsheet first."
      delay="0.1"
      hello="hola"
    >
      <FeatureIcons selector="1" />
      <img src="./cardIMG.png" alt="Image for Headers" />
    </FeatureHead>
    <FeatureHead
      title="Headers"
      description="You can filter and sort data in Wope instantly, without having to export it to a spreadsheet first."
      delay="0.2"
      hello="hola"
    >
      <FeatureIcons selector="2" />
      <img src="./cardIMG.png" alt="Image for Headers" />
    </FeatureHead>
    <FeatureHead
      title="Headers"
      description="You can filter and sort data in Wope instantly, without having to export it to a spreadsheet first."
      delay="0.3"
      hello="hola"
    >
      <FeatureIcons selector="3" />
      <img src="./cardIMG.png" alt="Image for Headers" />
    </FeatureHead>
    <FeatureHead
      title="Headers"
      description="You can filter and sort data in Wope instantly, without having to export it to a spreadsheet first."
      delay="0.4"
      hello="hola"
    >
      <FeatureIcons selector="4" />
      <img src="./cardIMG.png" alt="Image for Headers" />
    </FeatureHead>
    <FeatureHead
      title="Headers"
      description="You can filter and sort data in Wope instantly, without having to export it to a spreadsheet first."
      delay="0.5"
      hello="hola"
    >
      <FeatureIcons selector="5" />
      <img src="./cardIMG.png" alt="Image for Headers" />
    </FeatureHead>
    <FeatureHead
      title="Headers"
      description="You can filter and sort data in Wope instantly, without having to export it to a spreadsheet first."
      delay="0.6"
      hello="hola"
    >
      <FeatureIcons selector="6" />
      <img src="./cardIMG.png" alt="Image for Headers" />
    </FeatureHead>
  </Features>

  <!-- HighlightedPosts Widget ******* -->
  <!-- Steps Widget ****************** -->

  <Steps />

  <LatestPosts title="Spot issues faster <br /> with smart indicators" />

  <!-- FAQs Widget ******************* -->

  <Stats
    items={[
      { name: 'Downloads', value: '132K' },
      { name: 'Stars', value: '24.8K' },
      { name: 'Forks', value: '10.3K' },
      { name: 'Users', value: '48.4K' },
    ]}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    callToAction={{
      text: 'Get template',
      href: 'https://github.com/onwidget/astrowind',
      icon: 'tabler:download',
    }}
  >
    <Fragment slot="title">
      Astro + <br class="block sm:hidden" /><span class="sm:whitespace-nowrap">Tailwind CSS</span>
    </Fragment>

    <Fragment slot="subtitle">
      Be very surprised by these huge fake numbers you are seeing on this page. <br class="hidden md:inline" />Don't
      waste more time! :P
    </Fragment>
  </CallToAction>
</Layout>
